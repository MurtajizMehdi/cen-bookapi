@model Book
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-black py-2"> Delete Book </h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 my-4">
                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="p-0"></label>
                    <input asp-for="Title" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-0"></label>
                    <textarea asp-for="Description" disabled class="form-control"></textarea>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="AuthorId" class="p-0"></label>
                    <input asp-for="AuthorId" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="GenreId" class="p-0"></label>
                    <input asp-for="GenreId" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ISBN" class="p-0"></label>
                    <input asp-for="ISBN" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="MSRP" class="p-0"></label>
                    <input asp-for="MSRP" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="YearPublished" class="p-0"></label>
                    <input asp-for="YearPublished" disabled class="form-control" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ImgID" class="p-0"></label>
                    <input asp-for="ImgID" disabled class="form-control" />
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>